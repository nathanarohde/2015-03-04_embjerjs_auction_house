<div class='container'>

  <div id='HomeCarousel' class='carousel slide' data-interval='5000' data-ride='carousel'>
    <ol class='carousel-indicators'>
      <li data-target='#HomeCarousel' data-slide-to='0' class='active'></li>
      <li data-target='#HomeCarousel' data-slide-to='1'></li>
      <li data-target='#HomeCarousel' data-slide-to='2'></li>
      <li data-target='#HomeCarousel' data-slide-to='3'></li>
    </ol>
    <div class='carousel-inner'>
      <div class='active item'>
        {{#link-to 'auction'}}<img src='css/images/drawing1.jpg'>{{/link-to}}
      </div>

      <div class='item'>
        {{#link-to 'auction'}}<img src='css/images/drawing2.jpg'>{{/link-to}}
      </div>

      <div class='item'>
        {{#link-to 'auction'}}<img src='css/images/drawing3.jpg'>{{/link-to}}
      </div>

      <div class='item'>
        {{#link-to 'auction'}}<img src='css/images/drawing4.jpg'>{{/link-to}}
      </div>

    </div>
    <a class='left carousel-control' href='#HomeCarousel' role='button' data-slide='prev'>
      <span class='glyphicon glyphicon-chevron-left'>
      </span>
      <span class='sr-only'>Previous</span>
    </a>
    <a class='right carousel-control' href='#HomeCarousel' role='button' data-slide='next'>
      <span class='glyphicon glyphicon-chevron-right'>
      </span>
      <span class='sr-only'>Next</span>
    </a>

  </div>
</div>
